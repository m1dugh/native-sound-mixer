		"lodash": "^4.17.21",
		"node-addon-api": "^4.2.0",
		"node-gyp": "^9.3.0",
		"ts-jest": "^29.0.3",
		"typedoc": "^0.23.22",
		"typescript": "^4.2.4"
	},
	"repository": {
