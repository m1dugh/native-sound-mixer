{
	"compilerOptions": {
		"target": "ES5",
		"module": "commonjs",
        "esModuleInterop": true,
		"rootDir": "src",
		"outDir": "dist",
		"allowJs": false,
		"strict": false,
		"declaration": true,
		"sourceMap": true,
		"declarationDir": "./dist/@types/"
	},
	"include": [
		"./src/sound-mixer.ts"
	],
	"exclude": [
		"node_modules",
		"test/**",
		"**/*.spec.ts",
		"**/*.test.ts"
	],

    "typedocOptions": {
        "entryPoints": [
            "src/sound-mixer.ts"
        ],
        "out": "docs/ts"
    }
}
